{
  "editor.rulers": [80],
  "files.exclude": {
    "**/__pycache__/": true,
    "**/*.pyc": true,
    ".pytest_cache": true
  },
  "[python]": {
    "editor.rulers": [88],
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
}
